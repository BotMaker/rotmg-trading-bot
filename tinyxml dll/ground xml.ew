        end if

        if celement!=0 then
          ret=tinyxml_element_gettext(celement)
          if length(ret) then

	      else
          end if
            for i=1 to length(ground_list[index]) do
      	      if equal(ground_list[index][i][1],name2) then
      	        ground_list[index][i][2]=ret
      		    exit
